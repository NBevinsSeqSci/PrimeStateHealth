generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                    String    @id @default(cuid())
  name                  String?
  email                 String?   @unique
  emailVerified         DateTime?
  image                 String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  // Authentication
  passwordHash          String?

  // Identity
  firstName             String?
  lastName              String?
  preferredName         String?

  // Demographics - Basic
  dateOfBirth           DateTime?
  sex                   String?   // "male", "female", "other"
  education             String?   // Education level

  // Location
  country               String?
  region                String?   // State/Province/Region
  city                  String?
  postalCode            String?
  timeZone              String?

  // Background - Cognition relevant
  primaryLanguage       String?
  englishProficiency    String?   // "native", "fluent", "conversational", "limited"
  isMultilingual        Boolean?  @default(false)
  additionalLanguages   String[]  // Array of additional languages
  handedness            String?   // "right", "left", "ambidextrous"
  raceEthnicity         String[]  // Multi-select array
  deviceType            String?   // Auto-captured: "desktop", "laptop", "tablet", "phone"

  demographicsCompleted Boolean   @default(false)

  // Terms of Use acceptance
  acceptedTermsAt       DateTime?
  acceptedTermsVersion  String?   // e.g., "2026-01-28"

  accounts              Account[]
  sessions              Session[]
  tests                 CognitiveTest[]
  quickCheckIns         QuickCheckIn[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model QuickCheckIn {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  mood        Int
  anxiety     Int
  focus       Int
  motivation  Int
  stress      Int
  sleep       Int
  energy      Int
  notes       String?

  submittedAt DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([userId, submittedAt])
}

model CognitiveTest {
  id        String   @id @default(cuid())
  userId    String?
  email     String?
  kind      String?  // Test type: "reaction-time", "executive-function", "visual-memory", etc.
  score     Int
  answers   Json?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, kind])
  @@index([userId, createdAt])
}
